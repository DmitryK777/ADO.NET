<Window x:Class="ListView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListView"
        mc:Ignorable="d"
        Title="WPF - ListView" Height="450" Width="800"
        FontSize ="22"
>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height ="35" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBox Name="txtEntry" Height="35" />

        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!--
            <Rectangle Grid.Column="0"  Fill="Red" />
            <Rectangle Grid.Column="1" Fill="Green" />
            <Rectangle Grid.Column="2" Fill="Blue" />
            -->

          
        <Button Name="BtnAdd" Grid.Column="0" Width="Auto" Content="Add" Background="Aqua" Click="BtnAdd_Click" />
            <Button Name="BtnDelete" Grid.Column="1" Width="Auto" Content="Delete" Background="Red" Click="BtnDelete_Click" />
            <Button Name="BtnClear" Grid.Column="2" Width="Auto" Content="Clear" Background="GreenYellow" Click="BtnClear_Click" />


        </Grid>

        <ListView Name="lvEntries" Grid.Row="1" Grid.ColumnSpan="2" />
    </Grid>
</Window>
