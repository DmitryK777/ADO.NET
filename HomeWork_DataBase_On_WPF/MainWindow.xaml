<Window x:Class="HomeWork_DataBase_On_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork_DataBase_On_WPF"
        mc:Ignorable="d"
        Title="Data Base on WPF" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Groups" Height="22" Margin="-2,-2,-2,0" VerticalAlignment="Top">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition />
                        <RowDefinition Height="20" />
                    </Grid.RowDefinitions>
                    <Rectangle Grid.Row="0" Fill="LightSteelBlue" />
                    <Rectangle Grid.Row="2" Fill="LightSteelBlue" />

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="0.5*" />
                        </Grid.ColumnDefinitions>
                        <ComboBox Grid.Column="0"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="24"/>
                        <ComboBox Grid.Column="1"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="24"/>
                    </Grid>
                </Grid>
            </TabItem>
            
            <TabItem Header="Directions">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition />
                        <RowDefinition Height="20" />
                    </Grid.RowDefinitions>
                    <Rectangle Grid.Row="0" Fill="LightCoral" />
                    <Rectangle Grid.Row="2" Fill="LightCoral" />

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="0.5*" />
                        </Grid.ColumnDefinitions>
                        <ComboBox Grid.Column="0"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="24"/>
                        <ComboBox Grid.Column="1"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="24"/>
                    </Grid>
                </Grid>
            </TabItem>
            
            <TabItem Header="Students">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition />
                        <RowDefinition Height="20" />
                    </Grid.RowDefinitions>
                    <Rectangle Grid.Row="0" Fill="LightGreen" />
                    <Rectangle Grid.Row="2" Fill="LightGreen" />

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="0.5*" />
                        </Grid.ColumnDefinitions>
                        <ComboBox Grid.Column="0"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="24"/>
                        <ComboBox Grid.Column="1"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="24"/>
                    </Grid>
                </Grid>
            </TabItem>
            
        </TabControl>

        


    </Grid>
</Window>
